{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": "./",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noImplicitAny": false,
        "jsx": "react-jsx",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@sheet/*": [
                "src/sheet/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@theme/*": [
                "src/theme/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@lightModeType/*": [
                "src/types/lightModeType/*"
            ]
        }
    },
    "include": [
        "src",
        "**/*.ts",
        "**/*.tsx",
        "/src/assets/svg/sidebar/index.d.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}